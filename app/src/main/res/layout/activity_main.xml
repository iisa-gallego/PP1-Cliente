<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="370dp"
        android:layout_height="673dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="39dp"
            android:text="Generador"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/btnA"
            android:layout_width="47dp"
            android:layout_height="57dp"
            android:backgroundTint="#FFD24D"
            app:cornerRadius="100"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="494dp" />

        <Button
            android:id="@+id/btnV"
            android:layout_width="47dp"
            android:layout_height="57dp"
            android:backgroundTint="#45A852"
            app:cornerRadius="100"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="494dp" />

        <Button
            android:id="@+id/btnR"
            android:layout_width="47dp"
            android:layout_height="57dp"
            android:backgroundTint="#F14646"
            app:cornerRadius="100"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="494dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posición Inicial"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="310dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Nombre del Grupo"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EditPname"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="Número de Partículas"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EditNum"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/EditPname"
            android:layout_width="324dp"
            android:layout_height="38dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Inserte nombre"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/EditNum"
            android:layout_width="324dp"
            android:layout_height="38dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Inserte número"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/CoordY"
            android:layout_width="115dp"
            android:layout_height="37dp"
            android:background="#673AB7"
            android:ems="10"
            android:hint="Número"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textColorHint="#FFFFFF"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="373dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="346dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="346dp" />

        <EditText
            android:id="@+id/CoordX"
            android:layout_width="115dp"
            android:layout_height="37dp"
            android:layout_marginEnd="40dp"
            android:background="#673AB7"
            android:ems="10"
            android:foregroundTint="#FFFFFF"
            android:hint="Número"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textColorHint="#F4F3F3"
            app:layout_constraintEnd_toStartOf="@+id/CoordY"
            tools:layout_editor_absoluteY="373dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="158dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="44dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnConfir"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConfir"
        android:layout_width="158dp"
        android:layout_height="56dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="44dp"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>